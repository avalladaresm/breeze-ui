{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build/types",
    "module": "ES2020",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "playground",
    "src/setupEnzyme.ts"
  ]
}
